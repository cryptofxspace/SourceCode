<script>

    function readURL(input, elem) {

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function(e) {
                console.log('asasasasasa')
                $('#' + elem + '-img').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#front-photo").change(function() {
        console.log('asa')
        readURL(this, 'front-photo');
    });

    $("#back-photo").change(function() {
        readURL(this, 'back-photo');
    });

    $("#selfi-photo").change(function() {
        readURL(this, 'selfi-photo');
    });

</script>
